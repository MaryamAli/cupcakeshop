<div>
  <h2>Contact us!</h2>

  <%= flash[:notice] %>

  <%= form_tag("/static_pages/thank_you") do %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
      </div>      
      <div class="form-group">
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
      </div>      
    
  
   
    <%= button_tag(type: "submit", class: "btn btn-success send-btn") do %>
        <strong>Send </strong><span class="glyphicon glyphicon-send"></span>
    <% end %>
    </div> <!-- /col -->
    <br>
    <div class="col-md-4 location">
      <h4>Visit Us:</h4>
      <h4>555 Main St. Atlanta</h4> 
      <h4>404.555.5555</h4>
      <div>
      <%= image_tag("chef.svg", class:"img-responsive") %>
      <% end %>
      </div>
    </div>
    <br>
    <!-- MAP -->
    <div class="col-md-4 embed-responsive embed-responsive-4by3">
      <div id="map"></div>
    </div>    
  </div> <!-- /row -->  
<!-- <p>Find me in app/views/static_pages/contact.html.erb</p> -->
</div> <!-- /container -->