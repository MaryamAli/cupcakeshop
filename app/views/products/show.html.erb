  <div class="col-sm-6 col-md-4 img-responsive">
    <div class="thumbnail">
      <%= image_tag(@product.image_url, class: "img-responsive") %>
      <div class="caption">
        <h1><%= @product.name %></h1>
        <p><span class="glyphicon glyphicon-cutlery"></span> <%= @product.description %></p>
        <p><span class="glyphicon glyphicon-heart-empty"></span> <%= @product.colour %></p>

        <p><strong><%= number_to_currency(@product.price) %></strong></p>
        
        <div class="well well-lg">

          <%= link_to products_path, class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-chevron-left">Back</span>
            <% end %> 

          <%= link_to root_path, class: "btn btn-default" do %> 
            <span class="glyphicon glyphicon-home"> Home</span>
            <% end %>

          <%= link_to static_pages_contact_path, class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-phone-alt"> Contact</span>
            <% end %>
          <%= link_to edit_product_path(@product), class: "btn btn-default" do %> 
            <span class="glyphicon glyphicon-pencil">Edit</span>
            <% end %>         
        </div> <!-- well -->       
      </div> <!-- caption -->
