<!-- Displays a form under a product if user is signed in -->
<% if signed_in? %>
  <p><strong>Add a review:</strong></p>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.label :rating %><br>
      <%= f.text_area :rating, class: "rating" %>
    </p>
    <p>
      <div class="rating"></div>
    </p>
    <p>
      <%= f.submit "Submit", class: "btn btn-default" %>
    </p>
  <% end %>
<% end %>