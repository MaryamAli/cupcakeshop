<!-- Displays a form under a product if user is signed in -->
<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f|
  <p>
    <%= f.label :body, "Comments" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :rating %><br>
    <%= f.text_area :rating, class: "rating" %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
  <% end %>
<% end %>