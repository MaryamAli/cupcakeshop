<!-- <div class="row"> -->
  <div class="col-xs-12 col-md-4 img-responsive">
    <div class="thumbnail">
      <%= image_tag(product.image_url, class: "img-responsive") %>
      <div class="caption">
        <h1><%= product.name %></h1>
        <!-- for 6.7 -->
        <%# logger.debug "Product: #{product.name}"%>
        <p><span class="glyphicon glyphicon-cutlery"></span> <%= product.description %></p>
        <p><span class="glyphicon glyphicon-heart-empty"></span> <%= product.colour %></p>

        <p><strong><%= number_to_currency(product.price) %></strong></p>
        
        <div class="well">
          <%= link_to product, class: "btn btn-default" do%>
            <span class="glyphicon glyphicon-info-sign"> Info</span>
            <% end %>
          <%= link_to edit_product_path(product), class: "btn btn-default" do %>
              <span class= "glyphicon glyphicon-pencil"> Edit</span>
              <% end %>
          <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger delete-button" do %>
              <span class="glyphicon glyphicon-remove-sign" style="color:white"><strong></strong></span>

            <% end %>
        </div> <!-- well -->
        
      </div> <!-- caption -->
    </div> <!-- thumbnail -->
  </div> <!-- col -->
<!-- </div> --> <!-- /row -->

