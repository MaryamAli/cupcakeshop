<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div class="row">
            <p><span class="glyphicon glyphicon-user"></span> <%= comment.user.first_name %> <small><em>
            <%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>
            <% if signed_in? && current_user.admin? %>
              <%= link_to 'Destroy', product_comment_path(comment.product, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            </p>
            <p><%= "Rating: #{comment.rating}/5" %></p>
            <p><%= comment.body %></p>
            <hr>
        </div>
    <% end %>
</div>